<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >
    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:background="@drawable/round_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/text_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="373.68"
                android:text="STRING"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="@dimen/menu_title"
                android:layout_below="@+id/view"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/text_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"

                android:text="1234ABCD"
                android:layout_below="@+id/text_type"
                android:layout_alignParentStart="true"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/view" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/instance_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/card_info"
                android:layout_below="@+id/text_value"
                android:layout_alignParentStart="true"
                android:layout_marginTop="48dp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.93"
        android:text="1234ABCD"


        android:layout_marginTop="62dp"
        android:layout_marginEnd="9dp"
        android:layout_alignTop="@+id/card_layout"
        android:layout_alignParentEnd="true" />
</RelativeLayout>